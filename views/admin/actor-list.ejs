<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container mt-5">
        <div class="row">
            <% if (typeof message !="undefined") { %>
                <div class="alert alert-<%= message.class %>">
                    <%= message.text %>
                </div>
            <% } %>
            <%- include('../partials/search-bar') %>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>#id</th>
                    <th>Ad-Soyad</th>
                    <th style="width: 170px; text-align: center;"><a href="/admin/actor/create" class="btn btn-sm btn-success">+ yeni aktör ekle</a></th>
                </thead>
                <% actors.forEach(actor => { %>
                 
                    <tbody class="tbody">
                            <th>#<%= actor.id %></th>
                            <td><%= actor.actorname %></td>
                            <td>
                                <div class="buttons text-center">
                                    <a href="/admin/actor/edit/<%= actor.id %>" class="btn btn-primary">Düzenle</a>
                                    <a href="/admin/actor/delete/<%= actor.id %>" class="btn btn-danger">Sil</a>
                                </div>
                            </td>
                    </tbody>
                <% }) %>
            </table>
            <div class="row add-new-item">
                <a href="/admin/actor/create" class="text-muted text-center">+ yeni aktör oluştur</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>