<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container mt-5">
        <div class="row">
            <% if (typeof message !="undefined") { %>
                <div class="alert alert-<%= message.class %>">
                    <%= message.text %>
                </div>
            <% } %>
            <%- include('../partials/search-bar') %>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>#id</th>
                    <th style="width: 100px;">Afiş</th>
                    <th>Film Adı</th>
                    <th>Vizyon Tarihi</th>
                    <th>Film Süresi</th>
                    <th>Kategori</th>
                    <th>3D-2D</th>
                    <th>Dublaj-Altyazı</th>
                    <th style="width: 170px; text-align: center;"><a href="/admin/movie/create" class="btn btn-sm btn-success">+ yeni film ekle</a></th>
                </thead>
                <% movies.forEach(movie => { %>
                 
                    <tbody class="tbody">
                        <td>#<%= movie.id %></td>
                        <td><img src="/static/image/<%= movie.movieimg %>" alt="" style="width: 70px;"></td>
                        <td><%= movie.moviename %></td>
                        <td><%= movie.relasedate %></td>
                        <td><%= movie.duration %></td>
                        <td><% movie.categories.forEach(category => { %>
                            <p><%= category.categoryname %></p>
                        <% }) %></td>
                        <td><%= movie.visualtype==true ? "3D":"2D"  %></td>
                        <td><%= movie.subtitle==true ? "Altyazılı":"Türkçe Dublaj" %></td>
                        <td>
    
                            <div class="buttons text-center">
                                <a href="/admin/movie/edit/<%= movie.id %>" class="btn btn-primary">Düzenle</a>
                                <a href="/admin/movie/delete/<%= movie.id %>" class="btn btn-danger">Sil</a>
                            </div>
                        </td>
                    </tbody>
                <% }) %>
            </table>
            <div class="row add-new-item">
                <a href="/admin/movie/create" class="text-muted text-center">+ yeni film ekle</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>