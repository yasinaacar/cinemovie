<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container mt-5">
        <div class="row">
            <h3 class="text-center mb-4"><%= title %></h3>
            <% if (typeof message !="undefined") { %>
                <div class="alert alert-<%= message.class %>">
                    <%= message.text %>
                </div>
            <% } %>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>#id</th>
                    <th>Salon</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th style="width: 170px;" class="text-center"><a href="/admin/showtime/create" class="btn btn-sm btn-success">+ yeni seans ekle</a></th>
                </thead>
                <% showtimes.forEach(showtime => { %>
                 
                    <tbody>
                        <td>#<%= showtime.id %></td>
                        <td><% showtime.saloons.forEach(saloon => { %>
                            <span><b><%= saloon.saloonname %></b></span> / 
                        <% }) %></td>
                        <td><%= showtime.date %></td>
                        <td><%= showtime.time %></td>
                        <td>
                            <div class="buttons text-center">
                                <a href="/admin/showtime/edit/<%= showtime.id %>" class="btn btn-primary">DÃ¼zenle</a>
                                <a href="/admin/showtime/delete/<%= showtime.id %>" class="btn btn-danger">Sil</a>
                            </div>
                        </td>
                    </tbody>
                <% }) %>
            </table>
            <div class="row add-new-item">
                <a href="/admin/showtime/create" class="text-muted text-center">+ yeni seans ekle</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>