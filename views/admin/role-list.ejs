<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container mt-5">
        <div class="row">
            <h3 class="text-center mb-4"><%= title %></h3>
            <% if (typeof message !="undefined") { %>
                <div class="alert alert-<%= message.class %>">
                    <%= message.text %>
                </div>
            <% } %>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>#id</th>
                    <th>Rol Adı</th>
                    <th>Kişi Sayısı</th>
                    <th style="width: 170px; text-align: center;"><a href="/admin/role/create" class="btn btn-sm btn-success">+ yeni rol ekle</a></th>
                </thead>
                <% roles.forEach(role => { %>
                 
                    <tbody>
                            <th>#<%= role.id %></th>
                            <td><%= role.rolename %></td>
                            <td><%= role.user_count %></td>
                            <td>
                                <div class="buttons text-center">
                                    <a href="/admin/role/edit/<%= role.id %>" class="btn btn-primary">Düzenle</a>
                                    <a href="/admin/role/delete/<%= role.id %>" class="btn btn-danger">Sil</a>
                                </div>
                            </td>
                    </tbody>
                <% }) %>
            </table>
            <div class="row add-new-item">
                <a href="/admin/role/create" class="text-muted text-center">+ yeni rol oluştur</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>