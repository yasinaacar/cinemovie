<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container mt-5">
        <div class="row">
            <% if (typeof message != "undefined") { %>
                <div class="alert alert-<%= message.class %>">
                    <%= message.text %>
                </div>
            <% } %>
            <%- include('../partials/search-bar') %>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <th>#id</th>
                    <th>Salon adı</th>
                    <th>Salon Türü</th>
                    <th>Fiyat</th>
                    <th style="width: 170px; text-align: center;"><a href="/admin/saloontype/create" class="btn btn-sm btn-success">+ yeni salon türü ekle</a></th>
                </thead>
                <% saloontypes.forEach(saloontype => { %>
                 
                    <tbody class="tbody">
                        <th>#<%= saloontype.id %></th>
                        <td></td>
                        <td><%=saloontype.typename %></td>
                        <td><%= saloontype.ticketprice %>₺</td>
                        <td>
                            <div class="buttons text-center">
                                <a href="/admin/saloontype/edit/<%= saloontype.id %>" class="btn btn-primary">Düzenle</a>
                                <a href="/admin/saloontype/delete/<%= saloontype.id %>" class="btn btn-danger">Sil</a>
                            </div>
                        </td>
                    </tbody>
                <% }) %>
            </table>
            <div class="row add-new-item">
                <a href="/admin/saloontype/create" class="text-muted text-center">+ yeni salon türü ekle</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>