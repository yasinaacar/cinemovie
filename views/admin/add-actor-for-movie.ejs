<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>


    <div class="container mt-5">
        <div class="row">
            <% if (typeof message!="undefined") { %>
                <div class="alert alert-<%= message.class %>">
                    <h6><%= message.text %></h6>
                </div>
            <% } %>
            <h3 class="text-center mb-4"><%= title %></h3>
            <form method="post">
                <input type="hidden" name="movieid" value="<%= movie.id %>">
                <div class="col-md-12">
                    <div class="row mb-3 ms-1">
                        <div class="d-flex">
                            <h6 class="me-auto">Oyuncular</h6>
                            <div class="searchbar d-flex mb-1">
                                <input class="form-control me-2" type="search" placeholder="AktÃ¶r Ara" aria-label="Search" id="searchForActors">
                                <button class="btn btn-outline-danger" type="submit">Search</button>
                            </div>
                        </div>
                        <hr>
                        <div class="row mb-2">
                            <% actors.forEach(actor => { %>
                                <div class="col-md-2 d-flex">
                                    <div class="form-check ms-4 mb-1">
                                        <input class="form-check-input"type="checkbox" id="actor_<%= actor.id %>" value="<%= actor.id %>" name="actors"
                                        <%= movie.actors.some(act=> act.id==actor.id) ? "checked":"" %>>
                                        <label class="form-check-label" for="actor_<%= actor.id %>"><%= actor.actorname %></label>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="my-5  text-center">
                    <button type="submit" class="btn btn-primary px-5">Ekle</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/script') %>
    <script src="/static/js/app.js"></script>
</body>
</html>